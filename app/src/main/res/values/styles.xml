<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GitHubSearch.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/button_background</item>
        <item name="cornerRadius">300dp</item>



        <item name="android:padding">13dp</item>
        <item name="android:layout_marginBottom">24dp</item>

    </style>


    <style name="Theme.GitHubSearch.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

</resources>